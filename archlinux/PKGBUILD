pkgname=qiosk
pkgver=1.9
pkgdesc="QT Kiosk ."
pkgrel=1
arch=(
  'x86_64'
  'armv7h'
  'aarch64'
)
license=('GPL-3')
url='https://github.com/salamek/qiosk'
depends=(
    'qt6-webengine'
    'qt6-websockets'
    'qt6-virtualkeyboard'
)

makedepends=(
    'qt6-webengine'
    'qt6-websockets'
    'gcc'
    'make'
    'cmake'
)

provides=('qiosk')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake -B build -S ../../../ -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  cmake --build build
}

package() {
  cd build
  DESTDIR="$pkgdir" cmake --install build
}
